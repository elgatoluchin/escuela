@model ConcentracionNotas.Models.Nota

@{
    ViewBag.Title = "Edit";
}


<div class="ibox float-e-margins">
    <div class="ibox-title">
        <h5>@ViewBag.Title<small></small></h5>
    </div>
    <div class="ibox-content">
        
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)

            @Html.HiddenFor(model => model.NotaId)

            <div class="editor-label">
                @Html.LabelFor(model => model.ConcentFolio, "Concentracion")
            </div>
            <div class="editor-field">
                @Html.DropDownList("ConcentFolio", String.Empty)
                @Html.ValidationMessageFor(model => model.ConcentFolio)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.NotaNumero)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.NotaNumero)
                @Html.ValidationMessageFor(model => model.NotaNumero)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.NotaPonderacion)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.NotaPonderacion)
                @Html.ValidationMessageFor(model => model.NotaPonderacion)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.NotaObtenido)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.NotaObtenido)
                @Html.ValidationMessageFor(model => model.NotaObtenido)
            </div>

            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <div class="text-right">
                    @Html.ActionLink("Cancelar", "Index", new {id = Model.ConcentFolio}, new {@class = "btn btn-white"})
                    <input type="submit" class="btn btn-primary" value="Guardar"/>
                </div>
            </div>

        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
