@model ConcentracionNotas.Models.Nota

@{
    ViewBag.Title = "Editar Nota";
}

<div class="ibox float-e-margins">
    <div class="ibox-title">
        <h5>@ViewBag.Title<small></small></h5>
    </div>
    <div class="ibox-content">
        
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)

            @Html.HiddenFor(model => model.NotaId)
            @Html.HiddenFor(model => model.ConcentFolio)
            @Html.HiddenFor(model => model.NotaNumero)
            @Html.HiddenFor(model => model.NotaPonderacion)


            <div class="form-group">
                @Html.LabelFor(model => model.NotaObtenido, null, new {@class = "control-label"})
                <div>
                    @Html.TextBoxFor(model => model.NotaObtenido, null, new {@class = "form-control"})
                    <span class="help-block">@Html.ValidationMessageFor(model => model.NotaObtenido)</span>
                </div>
            </div>
            
            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <div class="text-right">
                    @Html.ActionLink("Cancelar", "Index", new { id = Model.ConcentFolio }, new { @class = "btn btn-white" })
                    <input type="submit" class="btn btn-primary" value="Guardar"/>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
