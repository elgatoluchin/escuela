<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../favicon.ico">

    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/bootstrapcss")

    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
<body style="background: #f3f3f4;">
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Concentración Notas</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
                <li>@Html.ActionLink("Inicio", "Index", "Concentracion")</li>
                <li>@Html.ActionLink("Profesor", "Index", "Profesor")</li>
                <li>@Html.ActionLink("Alumno", "Index", "Alumno")</li>
                <li>@Html.ActionLink("Asignatura", "Index", "Asignatura")</li>
            </ul>
        </div>
      </div>
    </nav>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-3 col-md-2 sidebar" style="background: #2f4050;">
                <ul class="nav nav-sidebar">
                    <li>
                        <a href="@Url.Action("Index", "Concentracion")">
                            <i class="fa fa-id-card-o"></i>
                            <span>Concentración de Notas</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Profesor")">
                            <i class="fa fa-graduation-cap"></i>
                            <span>Profesores</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Alumno")">
                            <i class="fa fa-user"></i>
                            <span>Alumnos</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Asignatura")">
                            <i class="fa fa-bookmark-o"></i>
                            <span>Asignaturas</span>
                        </a>
                    </li>
                </ul>
            </div>
            <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
                @{ Html.RenderPartial("_Alerts");  }
                @RenderBody()
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrapjs")
    @RenderSection("scripts", required: false)
</body>
</html>
