@model ConcentracionNotas.Models.AlumnoModelo

@{
    ViewBag.Title = "Crear Alumno";
}

<div class="ibox float-e-margins">
    <div class="ibox-title">
        <h5>@ViewBag.Title<small></small></h5>
    </div>
    <div class="ibox-content">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)


            <div class="form-group">
                @Html.LabelFor(model => model.RolUnico, null, new {@class = "control-label"})
                <div>
                    @Html.TextBoxFor(model => model.RolUnico, null, new {@class = "form-control"})
                    <span class="help-block">@Html.ValidationMessageFor(model => model.RolUnico)</span>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.AlumnoNombre, null, new {@class = "control-label"})
                <div>
                    @Html.TextBoxFor(model => model.AlumnoNombre, null, new {@class = "form-control"})
                    <span class="help-block">@Html.ValidationMessageFor(model => model.AlumnoNombre)</span>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.AlumnoApellido, null, new {@class = "control-label"})
                <div>
                    @Html.TextBoxFor(model => model.AlumnoApellido, null, new {@class = "form-control"})
                    <span class="help-block">@Html.ValidationMessageFor(model => model.AlumnoApellido)</span>
                </div>
            </div>

            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <div class="text-right">
                    @Html.ActionLink("Cancelar", "Index", null, new {@class = "btn btn-white"})
                    <input type="submit" class="btn btn-primary" value="Guardar"/>
                </div>
            </div>

        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
