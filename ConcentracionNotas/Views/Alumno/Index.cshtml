@model IEnumerable<ConcentracionNotas.Models.Alumno>

@{
    ViewBag.Title = "Lista de alumnos";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Agregar Alumno", "Create")
</p>
<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>RUT</th>
        <th>@Html.DisplayNameFor(model => model.AlumnoNombre)</th>
        <th>@Html.DisplayNameFor(model => model.AlumnoApellido)</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@String.Format("{0}-{1}", item.AlumnoRut, item.AlumnoRutDigito)</td>
        <td>@Html.DisplayFor(modelItem => item.AlumnoNombre)</td>
        <td>@Html.DisplayFor(modelItem => item.AlumnoApellido)</td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.AlumnoId }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.AlumnoId }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.AlumnoId })
        </td>
    </tr>
}
</table>
