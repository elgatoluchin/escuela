@model IEnumerable<ConcentracionNotas.Models.Profesor>

@{
    ViewBag.Title = "Lista de profesores";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Agregar Profesor", "Create")
</p>
<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>RUT</th>
        <th>@Html.DisplayNameFor(model => model.ProfesorNombre)</th>
        <th>@Html.DisplayNameFor(model => model.ProfesorApellido)</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@String.Format("{0}-{1}", item.ProfesorRut, item.ProfesorRutDigito)</td>
        <td>@Html.DisplayFor(modelItem => item.ProfesorNombre)</td>
        <td>@Html.DisplayFor(modelItem => item.ProfesorApellido)</td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.ProfesorId }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.ProfesorId }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.ProfesorId })
        </td>
    </tr>
}
</table>
