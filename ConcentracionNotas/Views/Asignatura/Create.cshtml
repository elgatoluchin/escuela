@model ConcentracionNotas.Models.Asignatura

@{
    ViewBag.Title = "Crear Asignatura";
    
    List<SelectListItem> tiposItems = new List<SelectListItem>()
    {
        new SelectListItem(){Text = "E-learning", Value = "1"},
        new SelectListItem(){Text = "Lectiva", Value = "2"},
        new SelectListItem(){Text = "Práctica", Value = "3"},
        new SelectListItem(){Text = "Semi Presencial / B-learning", Value = "3"}
    };
}


@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Asignatura</legend>

        <div class="form-group">
            @Html.LabelFor(model => model.ProfesorId, null, new {@class = "-col-sm-3 control-label"})
            <div class="-col-sm-9">
                @Html.DropDownList("ProfesorId", (IEnumerable<SelectListItem>)ViewBag.ProfesorId, new { @class = "form-control" })
                <span class="help-block">@Html.ValidationMessageFor(model => model.ProfesorId)</span>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AsignaturaNombre, null, new {@class = "-col-sm-3 control-label"})
            <div class="-col-sm-9">
                @Html.TextBoxFor(model => model.AsignaturaNombre, null, new {@class = "form-control"})
                <span class="help-block">@Html.ValidationMessageFor(model => model.AsignaturaNombre)</span>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AsignaturaTipo, null, new { @class = "-col-sm-3 control-label" })
            <div class="-col-sm-9">
                @Html.DropDownListFor(model => model.AsignaturaTipo, tiposItems, "Seleccione", new { @class = "form-control" })
                <span class="help-block">@Html.ValidationMessageFor(model => model.AsignaturaTipo)</span>
            </div>
        </div>

        <div class="text-right">
            <input type="submit" class="btn btn-primary" value="Guardar"/>
             @Html.ActionLink("Cancelar", "Index", null, new {@class = "btn"})
        </div>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
