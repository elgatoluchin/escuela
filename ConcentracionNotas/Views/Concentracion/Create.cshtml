@using System.Collections
@model ConcentracionNotas.Models.Concentracion

@{
    ViewBag.Title = "Crear Concentración de Notas";
}

<div class="ibox float-e-margins">
    <div class="ibox-title">
        <h5>@ViewBag.Title<small></small></h5>
    </div>
    <div class="ibox-content">
        @using (Html.BeginForm()) {
            @Html.ValidationSummary(true)

                <div class="form-group">
                    @Html.LabelFor(model => model.AsignaturaId, "Asignatura", new { @class = "control-label" })
                    <div>
                        @Html.DropDownList("AsignaturaId", (IEnumerable<SelectListItem>)ViewBag.AsignaturaId, new { @class = "form-control" })
                        <span class="help-block">@Html.ValidationMessageFor(model => model.AsignaturaId)</span>
                    </div>
                </div>

            <div class="form-group">
                @Html.LabelFor(model => model.AlumnoId, "Alumno", new {@class = "control-label"})
                <div>
                    @Html.DropDownList("AlumnoId", (IEnumerable<SelectListItem>) ViewBag.AlumnoId, new {@class = "form-control"})
                    <span class="help-block">@Html.ValidationMessageFor(model => model.AlumnoId)</span>
                </div>
            </div>
            
            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <div class="text-right">
                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white" })
                    <input type="submit" class="btn btn-primary" value="Guardar"/>
                </div>
            </div>
        }                 
    </div>
</div>









@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
