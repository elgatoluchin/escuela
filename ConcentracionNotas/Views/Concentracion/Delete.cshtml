@model ConcentracionNotas.Models.Concentracion

@{
    ViewBag.Title = "Eliminar Concentración de Notas";
}

<div class="ibox float-e-margins">
    <div class="ibox-title">
        <h5>@ViewBag.Title<small></small></h5>
    </div>
    <div class="ibox-content">

        <div class="alert alert-danger" role="alert">
            ¿Estás seguro que quieres eliminar esto?
        </div>

        <div class="display-label" style="display: none;">
            @Html.DisplayNameFor(model => model.Asignatura.AsignaturaNombre)
            @Html.DisplayFor(model => model.Asignatura.AsignaturaNombre)
            @Html.DisplayNameFor(model => model.Alumno.AlumnoRutDigito)
            @Html.DisplayFor(model => model.Alumno.AlumnoRutDigito)
            @Html.DisplayNameFor(model => model.ConcentPromedio)
            @Html.DisplayFor(model => model.ConcentPromedio)
            @Html.DisplayNameFor(model => model.ConcentSituacion)
            @Html.DisplayFor(model => model.ConcentSituacion)
            @Html.DisplayNameFor(model => model.ConcentAsistencia)
            @Html.DisplayFor(model => model.ConcentAsistencia)
        </div>

        @using (Html.BeginForm())
        {
            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <div class="text-right">
                    @Html.ActionLink("Cancelar", "Index", null, new {@class = "btn btn-white"})
                    <input type="submit" class="btn btn-danger" value="Eliminar"/>
                </div>
            </div>
        }
    </div>
</div>